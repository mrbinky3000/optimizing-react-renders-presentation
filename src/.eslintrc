{
  "root": true,
  "env": {
    "browser": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks",
    "import"
  ],
  "extends": [
    "plugin:react/recommended",
    "standard",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "rules": {
    "import/no-named-as-default": "off",
    "import/no-named-as-default-member": "off"
  }
}
